        <html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd"
      xmlns:p="tapestry:parameter">
    <head>
        <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
        <title>${title}</title>
        <script type="text/javascript">
		jQuery.noConflict();
		// initialise plugins
		jQuery(function(){
			jQuery('ul.sf-menu').superfish();
		});

		</script>
        
    </head>
    <body>
        <!-- start header -->
        <div id="header">
            <div id="logo">
            <!--menubar starts-->
            <ul class="sf-menu">
					<li>
						<a href="#">menu</a>
						<ul>
			   	   			<li><t:pagelink page="patient/CreatePatient"><img src="${context:icon/Edit Item.png}" border="0"/> New Patient</t:pagelink></li>
			   	   			<li><t:pagelink page="patient/ExistingPatient"><img src="${context:icon/Delete.png}" border="0"/> Existing Pat.</t:pagelink></li>
                       	</ul>
					</li>
			</ul>
			<!--menubar ends-->
                <h1>
                    <t:pagelink page="index">kids school</t:pagelink>
                </h1>
            </div>
            <div id="menu">
                <ul>
                    <li t:type="loop" source="pageNames" value="pageName" class="prop:classForPageName">
                        <t:pagelink page="prop:pageName">${pageName}</t:pagelink>
                    </li>
                </ul>
            </div>
        </div>
        <!-- end header -->
        <!-- start page -->
        <div id="page">
            <!-- start sidebar -->
            <div id="sidebar">
                <ul>
                    <li id="search" style="background: none;">
                    </li>
                    <li t:type="if" test="sidebar" class="sidebarnavigation">
                        <h2>${sidebarTitle}</h2>
                        <div class="sidebar-content">
                            <t:delegate to="sidebar"/>
                        </div>
                    </li>
                </ul>
            </div>
            <!-- end sidebar -->
            <!-- start content -->
            <div id="content">
                <div class="post">
                    <div class="title">
                        <h2>${title}</h2>
                    </div>
                    <div class="entry">
                        <t:body/>
                    </div>
                </div>
            </div>
            <!-- end content -->
            <br style="clear: both;"/>
        </div>
        <!-- end page -->
        <!-- start footer -->
        <div id="footer">
            <p class="legal">
                &copy;2011 com.kids.crm. All Rights Reserved.
                &nbsp;&nbsp;&bull;&nbsp;&nbsp;
                Design by
                <a href="http://www.freecsstemplates.org/">Free CSS Templates</a>
                &nbsp;&nbsp;&bull;&nbsp;&nbsp;
                Icons by
                <a href="http://google.com/">Google</a>.
            </p>
        </div>
        <!-- end footer -->
    </body>
</html>
